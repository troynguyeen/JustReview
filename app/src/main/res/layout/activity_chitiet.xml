<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/header"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="369dp"
        android:layout_height="198dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="454dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/book_codedao" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="357dp"
        android:layout_height="30dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="327dp"
        android:layout_marginBottom="400dp"
        android:fontFamily="@font/futura_bold_2"
        android:text="[Review sách] Code dạo kí sự "
        android:textColor="@color/primary_label"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="370dp"
        android:layout_height="154dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="317dp"
        android:text="Tác giả định hướng đối tượng của cuốn sách này là những em học sinh đang lựa chọn trường đại học thuộc ngành IT, sinh viên ngành IT đang học, sắp ra trường hay đang đi những bước đầu trong sự nghiệp của ngành IT. Vậy nên những ý kiến của tác giả trong phần này tập trung chủ yếu vào giới thiệu khái quát nghề lập trình, định hướng con đường cũng như những lời khuyên về học tập, làm việc"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.393" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="363dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="|BÌNH LUẬN"
        android:textColor="@color/teal_700"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <RelativeLayout
        android:layout_width="403dp"
        android:layout_height="162dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4" />


        <RatingBar
            android:id="@+id/ratingBar1"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="1000dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="11dp"

            android:text="Trọng Công"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_pink"
            android:textColor="@color/black"

            android:text="Cuốn sách rất hay và thú vị"

            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/radius_pink"
            android:text="Cuốn sách rất tuyệt vời"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="98dp"
            android:text="Chí Thành"
            android:textColor="@color/black"
            android:textSize="16dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>