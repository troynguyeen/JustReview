<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_6">
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="592dp"
        android:src="@drawable/left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="44dp">


        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/usericon" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_below="@id/userIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Đăng Nhập"
            android:textAllCaps="true"
            android:textColor="@color/primary_label"
            android:textSize="45sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/userName1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="68dp"
            android:layout_below="@id/textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="Nhập tên tài khoản"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="81dp"
            android:layout_below="@+id/userName1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnNextRegister"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/password1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_pink"
            android:text="Đăng ký tài khoản tại đây"
            android:textColor="#000000"  />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnNextRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_pink"
            android:text="Đăng Nhập"
            android:textColor="#000000" />


    </RelativeLayout>

    <include
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/navigation_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>