<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/usericon" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_below="@id/userIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Đăng Ký"
            android:textAllCaps="true"
            android:textColor="@color/primary_label"
            android:textSize="45sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="Nhập tên tài khoản"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="44dp"
            android:layout_below="@+id/userName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="44dp"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/realUserName"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="44dp"
            android:layout_below="@+id/confirmPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="Nhập tên của bạn"
            android:inputType="text"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/datePickerButton"
            style="?android:spinnerStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/realUserName"
            android:layout_centerHorizontal="true"
            android:onClick="openDatePicker"
            android:text="JAN 01 2020"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/datePickerButton"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:checked="false"
                android:onClick="checkButton"
                android:text="Nam"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/radioF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:checked="false"
                android:onClick="checkButton"
                android:text="Nữ"
                android:textSize="14dp" />
        </RadioGroup>

        <Button
            android:id="@+id/btnNextLogin"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGrp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_pink"
            android:text="Đã có tài khoản"
            android:textColor="#000000" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnNextLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_pink"
            android:text="Đăng Ký"
            android:textColor="#000000" />


    </RelativeLayout>



</RelativeLayout>