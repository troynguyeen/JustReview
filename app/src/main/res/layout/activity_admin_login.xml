<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_5">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="592dp"
        android:src="@drawable/left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/usericon" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_below="@id/userIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Đăng Nhập Admin"
            android:textAllCaps="true"
            android:textColor="@color/primary_label"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/adminName"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="68dp"
            android:layout_below="@id/textview"
            android:layout_marginTop="20dp"
            android:hint="Nhập tên tài khoản"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/adminPassword"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="81dp"
            android:layout_below="@+id/adminName"
            android:layout_marginTop="5dp"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:minHeight="48dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginAdmin"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adminPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_pink"
            android:text="Đăng Nhập"
            android:textColor="#000000" />


    </RelativeLayout>



</RelativeLayout>