<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set màu nền-->
    <gradient
        android:startColor="#eecda3"
        android:endColor="#ef629f"
        android:angle="90" />

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="1dp"
        android:color="#ffff" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="100dp" >
    </corners>
</shape>